@model IEnumerable<GPS.Models.Parametro>

@{
    ViewData["Title"] = "Parametros";
}

<h1>Parametros</h1>
<br />

<p>
    <a asp-action="Create" class="btn btn-primary">Novo</a>
</p>
<hr />
<br />
<table id="tabelaParametro" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescParametro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ponto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inativo)
            </th>
            <th>Admin</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescParametro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ponto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inativo)
            </td>
            <td>
@*                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                <a asp-action="Details" asp-route-id="@item.Id" title="Detalhes"><img src=~/css/detalhes.png></a> |
                <a asp-action="Edit" asp-route-id="@item.Id" title="Editar"><img src=~/css/editar.png></a> |
                <a asp-action="Delete" asp-route-id="@item.Id" title="Deletar"><img src=~/css/deletar.png></a>
            </td>
        </tr>
}
    </tbody>
</table>
<br />

@section Scripts {
    <script>
        $(document).ready( function () {
            $('#tabelaParametro').DataTable( {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
                }
            } );
        } );
    </script>
}